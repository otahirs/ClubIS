@page "/users"

@attribute [Authorize]

@inject HttpClient Http

@inject NavigationManager NavigationManager
@inject Searching Searching

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Member list</MudText>
    @if (users == null)
    {
        <MudProgressCircular Color="Color.Default" Indeterminate="true" />
    }
    else
    {
        <MudTable Items="users" Filter="new Func<UserListDTO, bool>(FilterFunc)" Hover="true" SortLabel="Sort By" OnRowClick="@((TableRowClickEventArgs<UserListDTO> e)=> Navigate(e.Item))">
            <ToolBarContent>
                <MudTextField @bind-Value="searchString" Placeholder="Search" Immediate="true" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh><MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<UserListDTO, object>(x=>x.Surname)">Name</MudTableSortLabel></MudTh>
                <MudTh><MudTableSortLabel SortBy="new Func<UserListDTO, object>(x=>x.RegistrationNumber)">RegNum</MudTableSortLabel></MudTh>
                <MudTh>E-mail</MudTh>
                <MudTh>Phone</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Naame">@context.Surname @context.Firstname</MudTd>
                <MudTd DataLabel="RegNum">@context.RegistrationNumber</MudTd>
                <MudTd DataLabel="E-mail">@context.Email</MudTd>
                <MudTd DataLabel="Phone">@context.Phone</MudTd>
            </RowTemplate>
        </MudTable>
    }
</MudContainer>



@code {
    private UserListDTO[] users;
    private string searchString = "";

    protected override async Task OnInitializedAsync()
    {
        users = await Http.GetFromJsonAsync<UserListDTO[]>("Users");
    }

    bool FilterFunc(UserListDTO u)
    {
        return Searching.FilterFunc($"{u.Firstname} {u.Surname} {u.RegistrationNumber}", searchString);
    }

    protected void Navigate(UserListDTO u)
    {
        NavigationManager.NavigateTo($"/users/userDetail/{u.Id}");
    }
}